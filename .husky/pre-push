#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
npx tsc --noEmit --project tsconfig.json
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix the type errors before pushing."
  exit 1
fi
echo "âœ… TypeScript types are valid"

# Run ESLint
echo "ğŸ” Running ESLint..."
npx eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0
if [ $? -ne 0 ]; then
  echo "âŒ ESLint found errors. Please fix them before pushing."
  exit 1
fi
echo "âœ… ESLint passed"

# Check Prettier formatting
echo "ğŸ’… Checking code formatting..."
npx prettier --check .
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed. Please run 'npm run format' to fix formatting issues."
  exit 1
fi
echo "âœ… Code formatting is correct"

# Build the project to ensure it compiles
echo "ğŸ—ï¸ Building project..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix the build errors before pushing."
  exit 1
fi
echo "âœ… Build successful"

echo "ğŸ‰ All pre-push checks passed! Ready to push."
